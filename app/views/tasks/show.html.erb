<h1 id="heading1">Task</h1>
<p id="notice"><%= notice %></p>

<div class="padded">
  <p>
    <b>Task started:</b>
    <%= @task.task_date %>
  </p>
  
  <p>
    <b>Status:</b>
    <%= @task.status %>
  </p>
  
  <p>
    <b>Answer:</b>
    <% if @wolfram_results.nil? %>
      <%= @task.answer %>
    <% else %>
      <div class="well" style="background:#ffffff">
        <% @wolfram_results.each do |result| %>
          <div class="" style="background:#ffffff">
            <%= result.html_safe %>
          </div>
        <% end %>
      </div>
    <% end %>
  </p>
  
  <p>
    <b>Resource:</b>
    <%= @task.resource %>
  </p>
  <p>
    <b>Resource Type:</b>
    <%= @task.resourcetype %>
  </p>
  <p>
    <b>Priority:</b>
    <%= @task.priority %>
  </p>
  <p>
    <b>Workflow:</b>
    <%= @task.workflow %>
  </p>
  <p>
    <b>Redundancy:</b>
    <%= @task.redundancy %>
  </p>
  <p>
    <b>Instructions:</b>
    <%= @task.instructions %>
  </p>
</div>
<div class="dark_shadow links rounded padded">
  <% if false %>
    <%= link_to 'Edit', edit_task_path(@task) %> |
  <% end %>
  <%= link_to 'Back', tasks_path %>
</div>
