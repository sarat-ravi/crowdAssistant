<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task date</th>
    <th>Task</th>
    <th>Status</th>
    <th>Response</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_date %></td>
    <td><%= task.task %></td>
    <td><%= task.status %></td>
    <td><%= task.response %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

